<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Eat da Burger!</h1>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm">

            <h3>Burger List</h3>
            <ul id="burger-list">
                {{#each burgers}}
                <li>
                    <p>{{this.burger_name}}</p>
                </li>
                {{/each}}
            </ul>
        </div>

        <div class="col-sm">
            <h3>Add a sandwhich</h3>
            <form id="add-burger">
                <div class="input-group input-group-sm mb-3">
                    <div class="input-group-prepend">
                    </div>
                    <input type="text" id="burger-input" name="burger" class="form-control" aria-label="Sizing example input"
                        aria-describedby="inputGroup-sizing-sm">
                </div>
                <button type="submit" class="btn btn-primary" id="submit-button">Submit</button>
            </form>
        </div>

        <div class="col-sm">

        </div>

    </div>
</div>

<script type="text/javascript">


$("#add-burger").on("submit", function(event) {
    event.preventDefault();

    let newburger = {
      burger: $("#add-burger[name=burger]").val
    };
 $.ajax("/create", {
      type: "POST",
      data: newburger
    }).then(
      function() {
        console.log("added new burger");
        // Reload the page to get the updated list
        location.reload();
      }
    );
  });

</script>
  