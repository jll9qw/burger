<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Eat da Burger!</h1>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm">

            <h3>Burger List</h3>
            <ul id="burger-list">
                {{#each burgers}}
                <li>
                    <p>{{this.burger_name}}</p>
                </li>
                {{/each}}
            </ul>
        </div>

        <div class="col-sm">
            <h3>Add a sandwhich</h3>
            <form method="POST" action="/create">
                <div class="input-group input-group-sm mb-3">
                    <div class="input-group-prepend">
                    </div>
                    <input type="text" name="burger-input"class="form-control" aria-label="Sizing example input"
                        aria-describedby="inputGroup-sizing-sm">
                </div>
                <button type="button" class="btn btn-primary" id="submit-button">Submit</button>
            </form>
        </div>

        <div class="col-sm">

        </div>

    </div>
</div>